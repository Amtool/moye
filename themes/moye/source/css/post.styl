
$nav-width = 250px
$nav-background-color = #1b1c1d

@require './_partial/reset.styl'

body
    padding-left $nav-width

.article-nav

    position fixed
    width $nav-width
    top 0
    left 0
    height 100%
    background-color $nav-background-color

    &-logo

        display block
        width 200px
        padding 11px 25px
        color #1f917d
        font-size 30px
        text-align: right;

        img
            margin-right 5px
            width 44px
            height @width
            vertical-align middle



    &-category

        text-align: right;
        padding: 10px 0;
        border-top: 1px solid #333;
        line-height: 1.5;

        &-title
            padding 0 25px
            margin-bottom: 5px;
            color #ddd
            font-size: 1.2em

        &-link

            display block
            margin-bottom: 5px;
            padding 0 25px
            color #888
            transition color .3s

            &.current
                color #eee

            &hover
                color #fff


.article-header


    height: 66px;
    padding-left: 50px;
    line-height: @height;
    color: #555;
    font-size 20px
    border-bottom: 1px solid #aaa;

    h1
        width: 980px;

    .github-button

        float: right
        visibility hidden

    iframe
        float: right
        margin: 19px 0

.article-entry

    font-size: 16px

    width: 980px;

    padding: 20px 50px;

    line-height 1.6

    color-border = #ccc

    h1 {
        font-size: 2.15 * 12px
    }
    h2 {
        font-size: 2 * 12px
    }
    h3 {
        font-size: 1.8 * 12px
    }
    h4 {
        font-size: 1.7 * 12px
    }
    h5 {
        font-size: 1.6 * 12px
    }
    h6 {
        font-size: 1.5 * 12px
    }

    dl,
    ol,
    p,
    ul {
        margin: 0 0 1.75em
    }
    a,
    a:active,
    a:hover,
    a:visited {
        cursor: pointer;
        color: #64b5f6;
        text-decoration: none
    }
    a:hover {
        color: #64b5f6;
        text-decoration: underline
    }
    table {
        background: 0 0;
        border-collapse: collapse;
        border-spacing: 0;
        text-align: left
    }
    table th {
        padding-bottom: .5em;
        border-bottom: 2px solid #e3eaf4
    }
    table td {
        border-bottom: 1px solid #e3eaf4;
        padding: 1rem 0
    }
    hr {
        border: 1px solid #eef2f8
    }
    dl dd {
        margin-left: 0
    }
    code {
        font-family: 'Open Sans';
        font-weight: 400;
        border-radius: 3px;
        background: #f5f5f5;
        padding: 0 10px
    }
    abbr,
    acronym {
        border-bottom: 1px dotted #5d686f
    }

    blockquote {
        border-left: 2px solid #d1dced;
        padding: 10px 20px
    }
    blockquote cite:before {
        content: ' â€” ';
        padding: 0 .3em
    }

    @require './_partial/highlight.styl'

.article-footer
    width: 980px;
    padding: 20px 50px;

